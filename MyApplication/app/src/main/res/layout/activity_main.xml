<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iloof.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/connect_ble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连接蓝牙"/>

            <TextView
                android:id="@+id/connect_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/get_cup_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取水杯状态"/>

        <Button
            android:id="@+id/get_drink_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取最新饮水数据"/>

        <Button
            android:id="@+id/get_add_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加50ml饮水量"/>

        <Button
            android:id="@+id/disconnect_ble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="断开蓝牙"/>


        <Button
            android:id="@+id/jump_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳到第二个界面"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
